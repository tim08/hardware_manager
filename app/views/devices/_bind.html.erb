<% if device.can_be_bind? %>
    <% if device.comp_case_id %>
        <%= form_for(device, method: :patch) do |f| %>
            <%= f.hidden_field :comp_case_id, :value => nil%>
            <%= f.submit 'Unbind'%>
        <% end %>
    <% else %>
        <%= link_to 'Bind', bind_device_path(device) %>
    <% end %>
<% end %>